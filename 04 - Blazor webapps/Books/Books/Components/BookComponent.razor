@* 1. URL routing for this component *@
@page "/books"


@* 2. body content of page/component *@
<h3>Books</h3>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
            </tr>
        }
    </tbody>
</table>


@* 3. C# code for this component *@
@code {

    public class Book
    {
        public string Title { get; set; } = "";
        public string Author { get; set; } = "";
    }

    private List<Book> Books = new()
    {
        new Book { Title = "A Game of Thrones", Author = "George R. R. Martin" },
        new Book { Title = "The Count of Monte Cristo", Author = "Alexandre Dumas" },
        new Book { Title = "The Dictionary" }
    };

}
